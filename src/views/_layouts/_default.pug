include /views/_components/_configs
include /views/_components/_mixins

block variable
  -
    var page= {
      url: "https://www.dummy.co.jp",
      locale: "ja_jp",
      siteName: "dummyサイト",
      title: "dummyサイト", // title, meta title, og:title
      description: "dummy description", // meta description og:description
      dir: '/', // og:url, canonical
      ogimage: "./assets/ogp.png", //ogp
      type: 'website', // og:type
      appId: '', // ページ別JSの起動トリガーとなるID
      bodyClassName: '', // bodyに付与するクラス
      crumbs: [], // パンくず, 構造化マークアップ
    }


doctype
html(lang="ja")
  head
    include /views/_components/_meta
    include /views/_components/_fonts
    include /views/_components/_styles
    block preload
    include /views/_components/_scripts
    include /views/_components/_ga_head
  body(data-app=page.appId, class=page.bodyClassName)
    include /views/includes/_header
    //- +phpInclude('/includes/header.php')

    main#pageTop.main
      +crumbs(page.crumbs)
      block mv
      #js-contents.js-contents
        block main

    include /views/includes/_footer
    //- +phpInclude('/includes/footer.php')
    include /views/_components/_ga_body
